package examples;
import java.util.*;

public class Workbench {
    public static void main(String[] args) {
    	Scanner input = new Scanner(System.in);		// Created an object named input of the Scanner class
    	int day;
    	boolean running= true;
    	
    	do {
	    	System.out.println("What day is it, enter:\n"
	    			+ " (1) for Sunday\n"
	    			+ " (2) for Monday\n"
	    			+ " (3) for Tuesday\n"
	    			+ " (4) for Wednesday\n"
	    			+ " (5) for Thursday\n"
	    			+ " (6) for Friday\n"
	    			+ " (7) for Saturday\n"
	    			+ " (8) to exit\n");
	    	day = input.nextInt();
	    	System.out.println();
	    	
	    	switch(day) {
	    		case 1: System.out.println("You've entered (1) for Sunday. Cool, now select another option\n");
	    			break;
	    		case 2: System.out.println("You've entered (2) for Monday. Good work, try something different\n");
	    			break;
	    		case 3: System.out.println("You've entered (3) for Tuesday. Nice, Enter something else\n");
	    			break;
	    		case 4: System.out.println("You've entered (4) for Wednesday. It works, Try something new\n");
	    			break;
	    		case 5: System.out.println("You've entered (5) for Thrusday. The program works, Try another option\n");
	    			break;
	    		case 6: System.out.println("You've entered (6) for Friday. Nice job, select something new\n");
	    			break;
	    		case 7: System.out.println("You've entered (7) for Saturday. Sweet, try entering (8)\n");
	    			break;
	    		case 8: System.out.println("You've entered (8) to exit\n");
	    			running = false;
	    			break;
	    		default: System.out.println("Wrong option, please try again\n");
	    	}
    	}while(running);
    	
    	System.out.println("Thank you, goodbye");
    }
}